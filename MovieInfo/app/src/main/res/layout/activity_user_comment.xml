<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tmovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_movie_name"
        android:text="movieName"
        android:textSize="30sp" />

    <RatingBar
        android:id="@+id/user_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/rating_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="평점을 입력해 주세요"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/user_textEdit"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:background="@drawable/border_yellow_allround"
        android:gravity="top"
        android:inputType="text"
        android:hint="100자 이내로 작성해 주세요" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="200dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_pupple_allround"
            android:onClick="onSummitClick"
            android:text="저장" />

        <Button
            android:id="@+id/btnRevert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_pupple_allround"
            android:onClick="onClick"
            android:text="취소" />
    </LinearLayout>


</LinearLayout>
